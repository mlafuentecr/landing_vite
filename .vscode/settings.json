{
	// Editor Settings
	"editor.fontSize": 18,
	"editor.tabSize": 2,
	"editor.wordWrap": "off",
	"editor.renderWhitespace": "all",
	"editor.bracketPairColorization.enabled": true,
	"editor.guides.bracketPairs": "active",
	"editor.multiCursorModifier": "alt",
	"editor.largeFileOptimizations": false,
	"editor.cursorStyle": "line-thin",
	"editor.wordWrapColumn": 120,
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.accessibilityPageSize": 20,

	// Terminal Settings
	"terminal.integrated.fontSize": 16,
	"terminal.integrated.defaultProfile.windows": "Git Bash",

	// Emmet Settings
	"emmet.includeLanguages": {
		"javascript": "javascriptreact",
		"typescript": "typescriptreact",
		"html": "html",
		"vue-html": "html",
		"razor": "html",
		"plaintext": "jade"
	},
	"emmet.excludeLanguages": ["markdown", "Comment"],
	"emmet.syntaxProfiles": {},

	// Live Server Settings
	"liveServer.settings.donotShowInfoMsg": true,
	"liveServer.settings.AdvanceCustomBrowserCmdLine": "",

	// Prettier Settings
	"prettier.useTabs": true,
	"prettier.singleQuote": true,
	"prettier.printWidth": 200,
	"prettier.arrowParens": "avoid",
	"prettier.endOfLine": "auto",
	"prettier.jsxSingleQuote": true,

	// File Associations
	"files.associations": {
		"*.css": "css",
		"*.js": "javascriptreact",
		"*.md": "markdown"
	},

	// Workbench Settings
	"workbench.iconTheme": "vscode-icons",
	"workbench.startupEditor": "newUntitledFile",
	"workbench.colorTheme": "Cobalt2",
	"workbench.colorCustomizations": {
		"titleBar.activeForeground": "#ffffff",
		"titleBar.inactiveForeground": "#cecececc",
		"titleBar.activeBackground": "#8d37a5",
		"titleBar.inactiveBackground": "#8d37a5"
	},

	// Explorer Settings
	"explorer.confirmDelete": false,

	// ESLint Settings
	"eslint.codeAction.disableRuleComment": { "enable": true },
	"eslint.format.enable": true,
	"eslint.lintTask.enable": true,
	"eslint.quiet": true,
	"eslint.run": "onSave",
	"eslint.workingDirectories": ["./src"],

	// CSS and Stylelint Settings
	"css.validate": false,
	"stylelint.enable": true,
	"scss.validate": false,

	// PHP Settings
	"[php]": { "editor.defaultFormatter": "fterrag.vscode-php-cs-fixer" },
	"php.validate.executablePath": "C:/Program Files/php-8.0.9/php.exe",

	// Other Language Settings
	"[html]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
	"[css]": { "editor.defaultFormatter": "vscode.css-language-features" },
	"[scss]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
	"[javascript]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[javascriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
	"[json]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
	"[markdown]": {},

	// Live Sass Compile Settings
	"liveSassCompile.settings.formats": [
		{
			"format": "compressed",
			"extensionName": ".min.css",
			"savePath": "~/../../public/css/"
		}
	],
	"liveSassCompile.settings.includeItems": [],

	// Git Settings
	"git.ignoreLimitWarning": true,

	// CSS Custom Data
	"css.customData": [".vscode/css_custom_data.json"]
}
